<% content_for :head do %>
<%= stylesheet_link_tag params[ :controller ], media: "all", "data-turbolinks-track" => true %>
<% end %>

<% content_for :app_content do %>
<header>
  <nav class="navbar navbar-default navbar-lg" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
      </button>
      <a class="navbar-brand" href="/">CSM</a>
    </div>
    <div class="collapse navbar-collapse" id="navbar-collapse">
      <!-- nav -->
      <ul class="nav navbar-nav">           
        <li><%= link_to  "Charities", charities_path %></li>
        <li><a href="#fakelink">About</a></li>
        <li><a href="#fakelink">Help</a></li>
      </ul>
      <% if !session[ :auth ] %>
        <!-- login/register btns -->
        <%= link_to "Login", login_path, class: "btn btn-primary navbar-btn btn-sm" %>
        <%= link_to "Sign up", register_path, class: "btn btn-primary navbar-btn btn-sm" %>
      <% end %>
      <!-- search bar form -->
      <form class="navbar-form navbar-right" action="charities/search" method="GET" role="search">
        <div class="form-group">
          <div class="input-group">
            <input class="form-control" name="charity[org_name]" id="search-inp" type="search" placeholder="Search">
            <span class="input-group-btn">
              <button type="submit" class="btn"><span class="fui-search"></span></button>
            </span>            
          </div>
        </div>               
      </form><!-- /search bar form -->
    </div><!-- /.navbar-collapse -->
  </nav>
</header>
<%= yield %>
<% end %>
<%= render template: "layouts/application" %>