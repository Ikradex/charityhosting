<div class="page-header">
  <ol id="admin-panel" class="breadcrumb">
    <li><%= link_to "Admin", admin_index_path %></li>
    <li><%= link_to "Charities", admin_charities_path %></li>
    <li class="active"><%= @charity.org_name %></li>
  </ol>
  <h2>Charities <small>Logged in as: <%= @admin.f_name + " " + @admin.l_name %></small></h2>
</div>

<div class="well">
  <h4 class="text-primary"><%= @charity.org_name %></h4>

  <table class="table table-bordered">
    <tbody>
      <tr><th style="width: 100px">Created:</th><td><%= @charity.created_at.to_formatted_s( :long ) %></td></tr>
      <% if @charity.updated_at > @charity.created_at %> 
      <tr><th style="width: 100px">Updated:</th><td><%= @charity.updated_at.to_formatted_s( :long ) %></td></tr>
      <% end %>
    </tbody>
  </table>

  <div class="btn-group">
    <%= link_to "Visit", charity_path( @charity ), class: "btn btn-primary btn-wide" %>
    <%= link_to "Edit", edit_admin_charity_path( @charity ), class: "btn btn-info btn-wide" %>
    <%= link_to "Suspend", edit_admin_charity_path( @charity ), class: "btn btn-danger" %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>#</th>
        <th>Verified</th>
        <th>Organisation</th>
        <th>Domain</th>
        <th>Email</th>
        <th>Telephone</th>
        <th>Address</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @charity.id %></td>
        <td><%= @charity.charity_number %></td>
        <td><%= @charity.charity_number_verified %></td>
        <td><%= @charity.org_name %></td>
        <td><%= @charity.domain %></td>
        <td><%= @charity.email %></td>
        <td><%= @charity.org_tel %></td>
        <td><%= @charity.org_address %></td>
      </tr>
    </tbody>
  </table>
</div>
    