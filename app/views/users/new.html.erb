<h2>Signup Today!</h2>

<%= form_for :user, url: users_path do |f| %>
  <% if @user.errors.any? %>
    <div id="form-errors">
      <p><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</p>
        
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="row">
      <div class="col-md-4">
        <%= f.label :f_name, "What's your first name?" %>
        <%= f.text_field :f_name, class: "form-control", placeholder: "First name" %>
      </div>
      <div class="col-md-4">
        <%= f.label :l_name, "What's your last name?" %>
        <%= f.text_field :l_name, class: "form-control", placeholder: "Last name" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.label :email, "What's your email address?" %>
        <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
      </div>
      <div class="col-md-4">
        <%= f.label :email_confirmation, "Re-type your email address" %>
        <%= f.text_field :email_confirmation, class: "form-control", placeholder: "Repeat your email" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <%= f.label :password, "Enter a password" %>
        <%= f.text_field :password, class: "form-control", placeholder: "Password" %>
      </div>
      <div class="col-md-4">
        <%= f.label :password_confirmation, "Re-type your password" %>
        <%= f.text_field :password_confirmation, class: "form-control", placeholder: "Repeat your password" %>
      </div>
    </div>
  </fieldset>

  <%= f.submit class: "btn btn-primary btn-wide", value: "Sign up" %>
  <%= f.submit type: "reset", class: "btn btn-default btn-wide", value: "Clear" %>
<% end %>