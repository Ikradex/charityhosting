<div class="row">
  <div class="col col1 col-md-5">
    <h3>Login</h3>

    <%= form_for :user, url: { action: "login", return: params[ :return ] } do |f| %>
    <fieldset>
      <%= f.label :email, "Email address" %>
      <%= f.text_field :email, class: "form-control", placeholder: "Email" %>

      <%= f.label :password, "Password" %>
      <%= f.text_field :password, class: "form-control", placeholder: "Password" %>
    </fieldset>

    <%= f.submit class: "btn btn-primary btn-wide", value: "Login" %>
    <%= f.submit type: "reset", class: "btn btn-default btn-wide", value: "Clear" %>
    <% end %>
  </div>
  <div class="col col2 col-md-7">
    <h3>Haven't registered yet?</h3>

    <p>To register, click this button <a class="btn btn-primary navbar-btn btn-sm" href="<%= signup_path %>">Sign up</a></p>
  </div>
</div>