<div id="site-wrap">
  <h1 id="site-title" class="wrap-text">Charity System Manager</h1>

  <p id="site-slogan" class="wrap-text">Create and manage your own charity websites.</p>

  <%= form_for :charity, :method => "GET", url: charities_search_path, id: "signup-shortcut" do |f| %>
  	<%= f.text_field :org_name, class: "form-control input-hg", placeholder: "Search a charity", spellcheck: "false" %>
  <% end %>

  <p class="wrap-text">Have a charity, need a website? Click below to get your own.</p>
  <%= link_to "GET STARTED", register_path, id: "start-btn", class: "wrap-text btn btn-primary btn-embossed btn-lg" %>
</div>